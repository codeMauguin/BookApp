{
	"presets": [
		"@babel/preset-react",
		"module:metro-react-native-babel-preset"
	],
	"plugins": [
		[
			"module-resolver",
			{
				"root": ["./src"],
				"extensions": [
					".ios.js",
					".android.js",
					".js",
					".ts",
					".tsx",
					".json"
				],
				"alias": {
					"*": ["./src"]
				}
			}
		],
		"@babel/plugin-syntax-jsx",
		"react-native-reanimated/plugin"
	]
}
